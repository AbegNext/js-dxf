{
  "name": "@propelleraero/dxf-writer",
  "version": "1.1.1",
  "description": "Dead simple 2D DXF writer",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "jasmine spec/*.spec.js",
    "bundle": "browserify -r ./src/Drawing.js:Drawing > ./examples/browser/dxf_bundle.js",
    "release-patch": "npm version patch && bundle && npm publish",
    "release-minor": "npm version minor && bundle && npm publish",
    "release-major": "npm version major && bundle && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ognjen-petrovic/js-dxf.git"
  },
  "keywords": [
    "DXF",
    "CAD",
    "AutoCAD"
  ],
  "author": "Ognjen Petrovic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ognjen-petrovic/js-dxf/issues"
  },
  "homepage": "https://github.com/ognjen-petrovic/js-dxf#readme",
  "devDependencies": {
    "husky": "^1.1.0",
    "jasmine": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
